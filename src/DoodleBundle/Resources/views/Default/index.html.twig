{% extends 'base.html.twig' %}

{% block body %}

  <table class="table table-striped">
    <caption class="text-right"><a href="{{ path('doodle_question_add') }}">Add new question</a></caption>
    <thead> 
      <tr> 
        <th>#</th> 
        <th>Title</th> 
        <th>Variants</th>  
        <th>Operations</th>
      </tr> 
    </thead> 
    <tbody>
    {#{{ dump(questions) }}#}
      {% for q in questions %}
      <tr> 
        <td>{{ q.id }}</td>
        <td>{{ q.title }}</td>
        <td>{{ q.variants }}</td>
        <td>
          {#<a href="" class="btn btn-success">View</a>#}
          <a href="{{ path('doodle_question_edit', {id: q.id}) }}" class="btn btn-default">Edit</a>
          {#<a href="" class="btn btn-danger">Delete</a>#}
        </td>
      </tr> 
      {% endfor %}
    </tbody> 
  </table>
{% endblock body %}
